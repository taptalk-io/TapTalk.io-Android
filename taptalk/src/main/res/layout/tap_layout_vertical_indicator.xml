<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_indicator_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        app:layout_goneMarginBottom="0dp"
        android:background="@color/tapColorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/v_indicator_2"/>

    <View
        android:id="@+id/v_indicator_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        app:layout_goneMarginBottom="0dp"
        android:background="@color/tapColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/v_indicator_1"
        app:layout_constraintBottom_toTopOf="@id/v_indicator_3"/>

    <View
        android:id="@+id/v_indicator_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        app:layout_goneMarginBottom="0dp"
        android:background="@color/tapColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/v_indicator_2"
        app:layout_constraintBottom_toTopOf="@id/v_indicator_4"/>

    <View
        android:id="@+id/v_indicator_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/tapColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/v_indicator_3"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>