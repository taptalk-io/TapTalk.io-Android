<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_tap_custom_snackbar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tap_bg_black_19_rounded_8dp"
    android:elevation="10dp"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp"
    tools:targetApi="lollipop">

    <ImageView
        android:id="@+id/iv_tap_custom_snackbar_icon"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:tint="@color/tapColorWhiteIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_tap_custom_snackbar_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseAppTint"
        tools:src="@drawable/tap_ic_checklist_pumpkin" />

    <TextView
        android:id="@+id/tv_tap_custom_snackbar_label"
        style="@style/tapCustomSnackbarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_tap_custom_snackbar_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TapTalk.io Custom Snackbar TapTalk.io Custom Snackbar TapTalk.io Custom Snackbar " />

</androidx.constraintlayout.widget.ConstraintLayout>
